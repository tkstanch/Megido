# Megido Security Platform - NGINX Configuration Example
# 
# This is an optional NGINX configuration for production deployments.
# WhiteNoise already serves static files efficiently, so NGINX is not required
# but can provide additional benefits like SSL termination and load balancing.

upstream megido_backend {
    server localhost:8000;
}

server {
    listen 80;
    server_name your-domain.com;
    
    # Redirect HTTP to HTTPS (uncomment in production)
    # return 301 https://$server_name$request_uri;
    
    client_max_body_size 100M;
    
    # Static files (optional - WhiteNoise already serves these efficiently)
    # Uncomment if you want NGINX to serve static files directly
    # location /static/ {
    #     alias /path/to/megido/staticfiles/;
    #     expires 30d;
    #     add_header Cache-Control "public, immutable";
    # }
    
    # Favicon (optional - can be served by Django/WhiteNoise)
    # Uncomment if you want NGINX to serve favicon directly
    # location = /favicon.ico {
    #     alias /path/to/megido/staticfiles/favicon.ico;
    #     access_log off;
    #     log_not_found off;
    #     expires 30d;
    # }
    
    # Media files (user uploads)
    location /media/ {
        alias /path/to/megido/media/;
        expires 7d;
    }
    
    # Proxy to Django/Gunicorn
    location / {
        proxy_pass http://megido_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Extended timeout for long-running scans (if not using async)
        proxy_read_timeout 300s;
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
    }
    
    # WebSocket support (for real-time updates)
    location /ws/ {
        proxy_pass http://megido_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeout (keep connection alive)
        proxy_read_timeout 86400s;
    }
}

